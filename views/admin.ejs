<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
</head>
<body>
  <h1>Liste des admin</h1>
  <table border="1">
    <thead>
      <tr>
        <th colspan="3">Administrateur</th>
      </tr>
    </thead>
    <tr>
      <th>Username :</th>
      <th> Authorisation :</th>
      <th>Action</th>
    </tr>
  
    <% for (const user of admins) { %>
      <form action="/authAdmin" method="post" name="authForm">
        <tr>
          <th><%= user.username %></th>
          <th>
            <select name="authVal">
              <option value="1" <%= user.authLevel === 1 ? 'selected' : '' %>>1</option>
              <option value="2" <%= user.authLevel === 2 ? 'selected' : '' %>>2</option>
              <option value="3" <%= user.authLevel === 3 ? 'selected' : '' %>>3</option>
              <option value="100" <%= user.authLevel === 100 ? 'selected' : '' %>>3</option>
            </select>
          </th>
          <th>
            <button type="submit">+</button>
            <button type="button" onclick="deleteUser('<%= user.username %>')">-</button>
          </th>
        </tr>
      </form>
    <% } %>
    <tr>
      <th><input type="text" placeholder="username"></th>
      
      
      <th><select id="authVal">
          <option value="1" selected >1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select></th>
        <th><button>+</button></th>
  </tr>
  
  </table>
    
  <script>
    function deleteUser(username) {
      if (confirm(`Voulez-vous vraiment supprimer l'utilisateur ${username} ?`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/deleteUser';
        form.style.display = 'none';
  
        const input = document.createElement('input');
        input.type = 'text';
        input.name = 'username';
        input.value = username;
        form.appendChild(input);
  
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
  
</body>
</html>